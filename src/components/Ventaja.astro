---
interface Props {
	title: string;
    imagen:string;
    descripcion:string;

}

const { title,imagen,descripcion } = Astro.props;
---


<div class="ventaja flex flex-col gap-1 items-center rounded-md p-4 pb-8 bg-white text-center">
    <div class="ventaja__grupo1 flex flex-col items-center gap-3">
        <figure class="p-4 rounded-full bg-[#756ee6]">
            <img src={imagen} alt="" >
        </figure>
        <h2 class="text-[1.2rem] text-[#022F36]">{title}</h2>
        

    </div>
<p class="text-[#022f36ce]">{descripcion}</p>



</div>
<style>
	.ventaja{
	width: 100%;
    height: 250px;
    justify-content: center;
    box-shadow: 1px 1px 10px rgba(128, 128, 128, 0.521);
	}

@media screen and (min-width:1200px){
	.ventaja{
		width: 525px;
    height: 350px;
   
	}
}
    
</style>