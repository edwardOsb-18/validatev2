---
import '@fontsource-variable/inter';
interface Props {
  titulo?:string
  libreria?:string
}
// import '@fontsource/volkhov';
// Supports weights 400-700
// Supports weights 100-900
const {titulo,libreria}=Astro.props
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valídate | {titulo}</title>
<link rel="shortcut icon" href="/ico.png" type="image/x-icon">
    <link rel="stylesheet" href={libreria} />
    
</head>
<body>
    
  <a
  class="icono__flotante"
  href="https://api.whatsapp.com/send?phone=51929675190&amp;text=Hola!%20Quiero%20asesoría%20para%20mi%20empresa!"
  target="_blank"
  ><img
    class="logo__whatsapp "
    src="https://edwardosb-18.github.io/tami_m/public/images/whatsapp.png"
    alt=""
/></a>
<slot name="header" ></slot>





<main class="min-h-screen" id="header">
    <slot name="main" ></slot>
</main>

<slot name="footer"></slot>



</body>
</html>





<style is:global>


	:root {
		--principal:#201b3f;
