      align-items: center;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }


    .swiper-slide img{
        width: 35px;
    }

    .icono__flotante {
  z-index: 20;
  width: 65px;
  right: 10px;
  bottom: 10px;
  position: fixed;
  
}

@media screen and (min-width: 1200px) {
  .icono__flotante  {
    right: 16px;
