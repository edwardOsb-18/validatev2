    body {
      position: relative;
     
      

    }

    body {
      /* background: #027aff; */
      background-color: white;
      font-family: 'Inter Variable', sans-serif;
      font-size: 15px;
      color: #000;
      margin: 0;
      padding: 0;
      /* background-image: url(/map.svg); */
      background-repeat: no-repeat;
      background-size: cover;
      background-attachment: fixed;
    }

    .swiper {
